                                <Grid.RowDefinitions>
                                    <RowDefinition Height="300" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <DockPanel Margin="10" LastChildFill="True">
                                    <DataGrid
                                        x:Name="dgvSites"
                                        Grid.Row="0"
                                        Height="250"
                                        AutoGenerateColumns="False"
                                        ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle1}"
                                        DockPanel.Dock="Top"
                                        ItemsSource="{Binding}"
                                        PreviewMouseLeftButtonDown="DataGrid_PreviewMouseLeftButtonDown"
                                        RowStyle="{StaticResource DataGridRowStyle1}"
                                        Style="{StaticResource DataGridStyle1}">
                                        <DataGrid.Resources>
                                            <Style BasedOn="{StaticResource VerticalScrollBarStyle}" TargetType="{x:Type ScrollBar}" />
                                        </DataGrid.Resources>
                                        <DataGrid.Columns>
                                            <DataGridTextColumn
                                                x:Name="Название_сайта"
                                                Width="*"
                                                Binding="{Binding Name}"
                                                CanUserResize="False"
                                                CanUserSort="False"
                                                CellStyle="{StaticResource DataGridCellStyle1}"
                                                Header="Название сайта"
                                                IsReadOnly="True" />

                                            <DataGridTextColumn
                                                x:Name="Состояние_сайта"
                                                Width="*"
                                                Binding="{Binding State}"
                                                CanUserResize="False"
                                                CanUserSort="False"
                                                CellStyle="{StaticResource DataGridCellStyle1}"
                                                Header="Состояние сайта"
                                                IsReadOnly="True" />

                                            <DataGridTextColumn
                                                x:Name="Привязки_сайта"
                                                Width="*"
                                                Binding="{Binding SiteBindings}"
                                                CanUserResize="False"
                                                CanUserSort="False"
                                                CellStyle="{StaticResource DataGridCellStyle1}"
                                                Header="Привязки сайта"
                                                IsReadOnly="True" />
                                        </DataGrid.Columns>
                                    </DataGrid>
                                    <Grid
                                        Width="755"
                                        Height="20"
                                        Margin="7,2,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Background="Transparent">
                                        <Border Background="#23262b" CornerRadius="0 0 20 20" />
                                    </Grid>
                                </DockPanel>
                                <Grid Grid.Row="1" Margin="10,0,80,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="290" />
                                        <ColumnDefinition Width="390" />
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0" Margin="0,0,25,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Button
                                            Grid.Column="0"
                                            Content="Запустить"
                                            Template="{StaticResource ProgButtonTemplate}"
                                            ToolTip="Запустить сайт">
                                            <Button.Tag>
                                                <BitmapImage UriSource="/Resources/images/start.png" />
                                            </Button.Tag>
                                        </Button>
                                        <Button
                                            Grid.Column="1"
                                            Content="Остановить"
                                            Template="{StaticResource ProgButtonTemplate}"
                                            ToolTip="Остановить сайт">
                                            <Button.Tag>
                                                <BitmapImage UriSource="/Resources/images/stop.png" />
                                            </Button.Tag>
                                        </Button>
                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Button
                                            Grid.Column="0"
                                            Content="Добавить"
                                            Template="{StaticResource ProgButtonTemplate}"
                                            ToolTip="Добавить сайт">
                                            <Button.Tag>
                                                <BitmapImage UriSource="/Resources/images/add.png" />
                                            </Button.Tag>
                                        </Button>
                                        <Button
                                            Grid.Column="1"
                                            Content="Изменить"
                                            Template="{StaticResource ProgButtonTemplate}"
                                            ToolTip="Изменить сайт">
                                            <Button.Tag>
                                                <BitmapImage UriSource="/Resources/images/edit.png" />
                                            </Button.Tag>
                                        </Button>
                                        <Button
                                            Grid.Column="2"
                                            Content="Удалить"
                                            Template="{StaticResource ProgButtonTemplate}"
                                            ToolTip="Удалить сайт">
                                            <Button.Tag>
                                                <BitmapImage UriSource="/Resources/images/delete.png" />
                                            </Button.Tag>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>
                    </TabItem.Content>
                </TabItem>
