<Window
    x:Class="AdminTool_wpf.ProgWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AdminTool_wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="800"
    Height="450"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="130" />
            <Setter Property="Height" Value="39" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="{StaticResource Raleway}" />
            <Setter Property="Foreground" Value="#9F9797" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border
                            x:Name="border"
                            Background="#262729"
                            BorderThickness="0"
                            CornerRadius="15">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" Foreground="#9F9797" />
                                <TextBlock
                                    x:Name="PlaceholderTextBlock"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="Gray"
                                    IsHitTestVisible="False"
                                    Text="{TemplateBinding Tag}"
                                    Visibility="Collapsed" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="PlaceholderTextBlock" Property="Visibility" Value="Visible" />
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="PlaceholderTextBlock" Property="Visibility" Value="Collapsed" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#333435" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="ProgButtonTemplate" TargetType="Button">
            <Border
                x:Name="border"
                Width="120"
                Height="40"
                Background="#3B3B47"
                CornerRadius="23">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35" />
                        <ColumnDefinition Width="75" />
                    </Grid.ColumnDefinitions>
                    <Image
                        Grid.Column="0"
                        Width="32"
                        Height="32"
                        Source="{TemplateBinding Tag}" />
                    <ContentPresenter
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="{TemplateBinding Content}"
                        TextElement.FontFamily="{StaticResource Raleway}"
                        TextElement.FontSize="12"
                        TextElement.FontWeight="DemiBold"
                        TextElement.Foreground="White" />
                </Grid>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="border" Property="Background" Value="#363645" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter TargetName="border" Property="RenderTransformOrigin" Value="0.5,0.5" />
                    <Setter TargetName="border" Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.95" ScaleY="0.95" />
                        </Setter.Value>
                    </Setter>
                    <Setter TargetName="border" Property="Background" Value="#525269" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border
                            Name="Border"
                            Background="#323336"
                            BorderThickness="0"
                            CornerRadius="10,10,0,0">
                            <ContentPresenter
                                x:Name="ContentSite"
                                Margin="10,2"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                ContentSource="Header" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="Gray" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#1D1E1F" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Border
                x:Name="Border"
                Background="#262729"
                BorderThickness="0"
                CornerRadius="15">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="3"
                        Direction="90"
                        Opacity="0.5"
                        ShadowDepth="1"
                        Color="Black" />
                </Border.Effect>
                <Path
                    x:Name="Arrow"
                    Margin="0,0,3,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Data="M 0 0 L 4 4 L 8 0 Z"
                    Fill="Black" />
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="ToggleButton.IsMouseOver" Value="true">
                    <Setter TargetName="Border" Property="Background" Value="#595c5b" />
                </Trigger>
                <Trigger Property="ToggleButton.IsChecked" Value="true">
                    <Setter TargetName="Border" Property="Background" Value="#2f3030" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <ControlTemplate x:Key="ComboBoxTextBox" TargetType="TextBox">
            <Border
                x:Name="Border"
                Background="Transparent"
                BorderThickness="0"
                CornerRadius="3">
                <ScrollViewer x:Name="PART_ContentHost" />
            </Border>
        </ControlTemplate>

        <Style x:Key="RoundedComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Width" Value="120" />
            <Setter Property="Height" Value="39" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="FontFamily" Value="{StaticResource Raleway}" />
            <Setter Property="Foreground" Value="#9F9797" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border
                            x:Name="border"
                            Background="#262729"
                            BorderThickness="0"
                            CornerRadius="15">
                            <Grid>
                                <ToggleButton
                                    x:Name="toggleButton"
                                    Grid.Column="2"
                                    ClickMode="Press"
                                    Focusable="false"
                                    IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                    Template="{StaticResource ComboBoxToggleButton}" />
                                <ContentPresenter
                                    x:Name="contentPresenter"
                                    Margin="{TemplateBinding Padding}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Content="{TemplateBinding SelectionBoxItem}"
                                    ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                    ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" />
                                <Popup
                                    x:Name="popup"
                                    AllowsTransparency="True"
                                    Focusable="False"
                                    IsOpen="{TemplateBinding IsDropDownOpen}"
                                    Placement="Bottom"
                                    PopupAnimation="Slide">
                                    <Grid
                                        x:Name="dropDown"
                                        MinWidth="{TemplateBinding ActualWidth}"
                                        MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                        <Border
                                            x:Name="dropDownBorder"
                                            Background="#262729"
                                            BorderBrush="#262729"
                                            BorderThickness="1"
                                            CornerRadius="15">
                                            <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                                <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                            </ScrollViewer>
                                        </Border>
                                    </Grid>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="false">
                                <Setter TargetName="dropDownBorder" Property="MinHeight" Value="95" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="#ADADAD" />
                            </Trigger>
                            <Trigger Property="IsGrouping" Value="true">
                                <Setter Property="ScrollViewer.CanContentScroll" Value="false" />
                            </Trigger>
                            <Trigger SourceName="popup" Property="Popup.AllowsTransparency" Value="true">
                                <Setter TargetName="dropDownBorder" Property="CornerRadius" Value="15" />
                                <Setter TargetName="dropDownBorder" Property="Margin" Value="0,2,0,0" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!--  РАЗМЕТКА  -->
    <Border Background="#3F4041" CornerRadius="10">
        <Grid Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border
                Grid.Row="0"
                MouseDown="Drag"
                Style="{StaticResource TopBorderStyle}">
                <Label
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="Admintool"
                    FontFamily="{StaticResource RubikMonoOneFont}"
                    FontSize="16"
                    Foreground="White" />
            </Border>
            <Button Click="minimizeButton_Click" Template="{StaticResource MinimizeButtonTemplate}" />
            <Button
                x:Name="btnClose"
                Click="btnClose_Click"
                Template="{StaticResource CloseButtonTemplate}" />

            <Label Name="lblInfo" Grid.Row="1">
                <Label.Content>
                    <TextBlock
                        Margin="30"
                        FontFamily="{StaticResource Raleway}"
                        FontSize="24"
                        Foreground="White"
                        Text="Нет доступных доступных функций, пожалуйста, обратитесь к системному администратору"
                        TextWrapping="Wrap" />
                </Label.Content>
            </Label>
            <TabControl
                x:Name="functionTabs"
                Grid.Row="1"
                Margin="3,2,3,4"
                Padding="2,0,0,0"
                Background="Transparent"
                BorderThickness="0">
                <TabItem
                    FontSize="20"
                    Foreground="White"
                    Header="Управление пулами">
                    <TabItem.Content>
                        <Border Background="#1D1E1F" CornerRadius="0 10 10 10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="300" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <DockPanel Margin="10" LastChildFill="True">
                                    <DataGrid
                                        x:Name="dgvPools"
                                        Grid.Row="0"
                                        Height="250"
                                        AutoGenerateColumns="False"
                                        ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle1}"
                                        DockPanel.Dock="Top"
                                        ItemsSource="{Binding}"
                                        PreviewMouseLeftButtonDown="DataGrid_PreviewMouseLeftButtonDown"
                                        RowStyle="{StaticResource DataGridRowStyle1}"
                                        Style="{StaticResource DataGridStyle1}">
                                        <DataGrid.Resources>
                                            <Style BasedOn="{StaticResource VerticalScrollBarStyle}" TargetType="{x:Type ScrollBar}" />
                                        </DataGrid.Resources>
                                        <DataGrid.Columns>
                                            <DataGridTextColumn
                                                x:Name="Название_пула"
                                                Width="180"
                                                Binding="{Binding Name}"
                                                CanUserResize="False"
                                                CanUserSort="False"
                                                CellStyle="{StaticResource DataGridCellStyle1}"
                                                Header="Название пула"
                                                IsReadOnly="True" />

                                            <DataGridTextColumn
                                                x:Name="Состояние_пула"
                                                Width="*"
                                                Binding="{Binding State}"
                                                CanUserResize="False"
                                                CanUserSort="False"
                                                CellStyle="{StaticResource DataGridCellStyle1}"
                                                Header="Состояние пула"
                                                IsReadOnly="True" />

                                            <DataGridTextColumn
                                                x:Name="Версия_CLR"
                                                Width="150"
                                                Binding="{Binding NETCLRVersion}"
                                                CanUserResize="False"
                                                CanUserSort="False"
                                                CellStyle="{StaticResource DataGridCellStyle1}"
                                                Header="Версия CLR"
                                                IsReadOnly="True" />

                                            <DataGridTextColumn
                                                x:Name="Режим_конвейера"
                                                Width="*"
                                                Binding="{Binding ManagedPipelineMode}"
                                                CanUserResize="False"
                                                CanUserSort="False"
                                                CellStyle="{StaticResource DataGridCellStyle1}"
                                                Header="Режим конвейера"
                                                IsReadOnly="True" />
                                        </DataGrid.Columns>
                                    </DataGrid>
                                    <Grid
                                        Width="755"
                                        Height="20"
                                        Margin="7,2,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Background="Transparent">
                                        <Border Background="#23262b" CornerRadius="0 0 20 20" />
                                    </Grid>
                                </DockPanel>
                                <Grid Grid.Row="1" Margin="10,0,80,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="290" />
                                        <ColumnDefinition Width="390" />
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0" Margin="0,0,25,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Button
                                            Grid.Column="0"
                                            Click="btnStartPool_Click"
                                            Content="Запустить"
                                            Template="{StaticResource ProgButtonTemplate}"
                                            ToolTip="Запустить пул">
                                            <Button.Tag>
                                                <BitmapImage UriSource="/Resources/images/start.png" />
                                            </Button.Tag>
                                        </Button>
                                        <Button
                                            Grid.Column="1"
                                            Click="btnStopPool_Click"
                                            Content="Остановить"
                                            Template="{StaticResource ProgButtonTemplate}"
                                            ToolTip="Остановить пул">
                                            <Button.Tag>
                                                <BitmapImage UriSource="/Resources/images/stop.png" />
                                            </Button.Tag>
                                        </Button>
                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Button
                                            Grid.Column="0"
                                            Click="btnAddPool_Click"
                                            Content="Добавить"
                                            Template="{StaticResource ProgButtonTemplate}"
                                            ToolTip="Добавить пул">
                                            <Button.Tag>
                                                <BitmapImage UriSource="/Resources/images/add.png" />
                                            </Button.Tag>
                                        </Button>
                                        <Button
                                            Grid.Column="1"
                                            Click="btnEditPool_Click"
                                            Content="Изменить"
                                            Template="{StaticResource ProgButtonTemplate}"
                                            ToolTip="Изменить пул">
                                            <Button.Tag>
                                                <BitmapImage UriSource="/Resources/images/edit.png" />
                                            </Button.Tag>
                                        </Button>
                                        <Button
                                            Grid.Column="2"
                                            Click="btnDeletePool_Click"
                                            Content="Удалить"
                                            Template="{StaticResource ProgButtonTemplate}"
                                            ToolTip="Удалить пул">
                                            <Button.Tag>
                                                <BitmapImage UriSource="/Resources/images/delete.png" />
                                            </Button.Tag>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>
                    </TabItem.Content>
                </TabItem>
                <TabItem
                    FontSize="20"
                    Foreground="White"
                    Header="Управление сайтами IIS">
                    <TabItem.Content>
                        <Border Background="#1D1E1F" CornerRadius="0 10 10 10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="300" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <DockPanel Margin="10" LastChildFill="True">
                                    <DataGrid
                                        x:Name="dgvSites"
                                        Grid.Row="0"
                                        Height="250"
                                        AutoGenerateColumns="False"
                                        ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle1}"
                                        DockPanel.Dock="Top"
                                        ItemsSource="{Binding}"
                                        PreviewMouseLeftButtonDown="DataGrid_PreviewMouseLeftButtonDown"
                                        RowStyle="{StaticResource DataGridRowStyle1}"
                                        Style="{StaticResource DataGridStyle1}">
                                        <DataGrid.Resources>
                                            <Style BasedOn="{StaticResource VerticalScrollBarStyle}" TargetType="{x:Type ScrollBar}" />
                                        </DataGrid.Resources>
                                        <DataGrid.Columns>
                                            <DataGridTextColumn
                                                x:Name="Название_сайта"
                                                Width="*"
                                                Binding="{Binding Name}"
                                                CanUserResize="False"
                                                CanUserSort="False"
                                                CellStyle="{StaticResource DataGridCellStyle1}"
                                                Header="Название сайта"
                                                IsReadOnly="True" />

                                            <DataGridTextColumn
                                                x:Name="Состояние_сайта"
                                                Width="*"
                                                Binding="{Binding State}"
                                                CanUserResize="False"
                                                CanUserSort="False"
                                                CellStyle="{StaticResource DataGridCellStyle1}"
                                                Header="Состояние сайта"
                                                IsReadOnly="True" />

                                            <DataGridTextColumn
                                                x:Name="Привязки_сайта"
                                                Width="*"
                                                Binding="{Binding Bindings}"
                                                CanUserResize="False"
                                                CanUserSort="False"
                                                CellStyle="{StaticResource DataGridCellStyle1}"
                                                Header="Привязки сайта"
                                                IsReadOnly="True" />
                                        </DataGrid.Columns>
                                    </DataGrid>
                                    <Grid
                                        Width="755"
                                        Height="20"
                                        Margin="7,2,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Background="Transparent">
                                        <Border Background="#23262b" CornerRadius="0 0 20 20" />
                                    </Grid>
                                </DockPanel>
                                <Grid Grid.Row="1" Margin="10,0,80,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="290" />
                                        <ColumnDefinition Width="390" />
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0" Margin="0,0,25,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Button
                                            Grid.Column="0"
                                            Click="btnStart_Click"
                                            Content="Запустить"
                                            Template="{StaticResource ProgButtonTemplate}"
                                            ToolTip="Запустить сайт">
                                            <Button.Tag>
                                                <BitmapImage UriSource="/Resources/images/start.png" />
                                            </Button.Tag>
                                        </Button>
                                        <Button
                                            Grid.Column="1"
                                            Click="btnStop_Click"
                                            Content="Остановить"
                                            Template="{StaticResource ProgButtonTemplate}"
                                            ToolTip="Остановить сайт">
                                            <Button.Tag>
                                                <BitmapImage UriSource="/Resources/images/stop.png" />
                                            </Button.Tag>
                                        </Button>
                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Button
                                            Grid.Column="0"
                                            Click="btnAddSite_Click"
                                            Content="Добавить"
                                            Template="{StaticResource ProgButtonTemplate}"
                                            ToolTip="Добавить сайт">
                                            <Button.Tag>
                                                <BitmapImage UriSource="/Resources/images/add.png" />
                                            </Button.Tag>
                                        </Button>
                                        <Button
                                            Grid.Column="1"
                                            Click="btnEditSite_Click"
                                            Content="Изменить"
                                            Template="{StaticResource ProgButtonTemplate}"
                                            ToolTip="Изменить сайт">
                                            <Button.Tag>
                                                <BitmapImage UriSource="/Resources/images/edit.png" />
                                            </Button.Tag>
                                        </Button>
                                        <Button
                                            Grid.Column="2"
                                            Click="btnDeleteSite_Click"
                                            Content="Удалить"
                                            Template="{StaticResource ProgButtonTemplate}"
                                            ToolTip="Удалить сайт">
                                            <Button.Tag>
                                                <BitmapImage UriSource="/Resources/images/delete.png" />
                                            </Button.Tag>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>
                    </TabItem.Content>
                </TabItem>
