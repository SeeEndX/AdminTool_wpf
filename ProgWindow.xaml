            </TabControl>
            <Button
                Grid.Row="1"
                Margin="20,0,10,17"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="btnLogout_Click"
                Template="{StaticResource ExitButtonTemplate}"
                ToolTip="Выйти">
                <Button.Tag>
                    <BitmapImage UriSource="/Resources/images/exit.png" />
                </Button.Tag>
            </Button>
        </Grid>
    </Border>
</Window>